<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mapper.UserMapper">

    <resultMap id="resultMap" type="springboot.pojo.User">
        <id column="id" property="id" jdbcType="BIGINT"  />
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="column">id,password,name,username</sql>

    <select id="getUserList" resultMap="resultMap">
        select
        <include refid="column" />
        from user
    </select>

    <select id="getUser" resultMap="resultMap" parameterType="java.lang.String">
        SELECT
        <include refid="baseColumnList" />
        FROM user
        WHERE username = #{username}
    </select>
</mapper>